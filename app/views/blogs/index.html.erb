<div class="main_contents">
    <% @blogs.each do |blog| %>
        <div class="blog_contents">
          <h2><%= link_to blog.title, blog_path(blog.id) %></h2>
          <%= blog.body %>

         <!-- ↓追加(部分的に更新したい場所)↓ -->
          <div id="likes_buttons_<%= blog.id %>">
             <%= render partial: 'likes/like', locals: { blog: blog} %>
          </div>
         <!-- ↑ここまで↑ -->
        </div>
  <% end %>
</div>